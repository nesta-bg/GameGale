@model IEnumerable<GameGale.Models.Game>

@{
    ViewBag.Title = "Games";
}

<h2>Games</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Game</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
        <tr>
            <td>@Html.ActionLink(game.Name, "Details", "Games", new { id = game.Id }, null)</td>
            <td>@game.Genre.Name</td>
        </tr>
        }
    </tbody>
</table>
