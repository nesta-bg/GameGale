@model GameGale.ViewModels.GameFormViewModel

@{
    /**/

    ViewBag.Title = "New";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Games"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Game.Name)
        @Html.TextBoxFor(m => m.Game.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Game.ReleaseDate)
        @Html.TextBoxFor(m => m.Game.ReleaseDate, "{0:dd MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Game.GenreId)
        @Html.DropDownListFor(m => m.Game.GenreId, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Game.NumberInStock)
        @Html.TextBoxFor(m => m.Game.NumberInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Game.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

