@model IEnumerable<GameGale.Models.Game>

@{
                /**/

                ViewBag.Title = "Games";
}

<h2>Games</h2>

<table id="games" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Game</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#games").DataTable({
                ajax: {
                    url: "/api/games",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                       
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });
        });
    </script>
}
